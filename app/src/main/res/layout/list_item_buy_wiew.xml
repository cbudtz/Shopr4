<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/item"
        android:text="@string/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <ImageButton
        android:id="@+id/got_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/presence_online"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/item"
        android:layout_toStartOf="@+id/item"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp" />

    <ImageButton
        android:id="@+id/dont_got_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/presence_busy"
        android:padding="0dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_alignTop="@+id/item"
        android:layout_toRightOf="@+id/item"
        android:layout_toEndOf="@+id/item" />


</RelativeLayout>